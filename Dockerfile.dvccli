FROM python:3.12-slim

WORKDIR /repo

RUN apt-get update && \
    apt-get install -y --no-install-recommends git git-lfs ca-certificates && \
    rm -rf /var/lib/apt/lists/* && \
    git lfs install

# Install DVC with S3 extras; isolated from Airflow to avoid constraints issues
RUN pip install --no-cache-dir "dvc[s3]==3.58.0"

# default shell
ENTRYPOINT ["bash"]
